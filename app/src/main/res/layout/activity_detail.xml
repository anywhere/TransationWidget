<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5"
                    android:orientation="vertical"
                    android:paddingBottom="55dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="800dp">
                        <TextView
                            android:background="#ffa200"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:gravity="center"
                            android:text="我是图片" />

                        <TextView
                            android:id="@+id/tv_title"
                            android:gravity="center"
                            android:text="我是标题"
                            android:layout_width="match_parent"
                            android:layout_height="400dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_detail"
                        android:background="#000000"
                        android:textColor="#ffffff"
                        android:gravity="center_horizontal"
                        android:text="我是详情"
                        android:layout_width="match_parent"
                        android:layout_height="600dp" />

                    <TextView
                        android:id="@+id/tv_comment"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:text="我是评价"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="600dp" />

                    <TextView
                        android:id="@+id/tv_recommend"
                        android:background="#000000"
                        android:textColor="#ffffff"
                        android:text="我是推荐"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="800dp" />



                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50.5dp"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@+id/rl_canbuy"
                    android:layout_width="match_parent"
                    android:layout_height="50.5dp"
                    android:background="#ffffff">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/ll_btn"
                        android:gravity="center_vertical">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="收藏"
                            android:textSize="10dp"
                            android:visibility="gone" />

                        <!--<View-->
                        <!--android:layout_width="0.5dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="@color/issue_demand_divider" />-->


                        <RelativeLayout
                            android:id="@+id/rl_car"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:drawableTop="@mipmap/icon_grey_gwc"
                                android:id="@+id/tv_car"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawablePadding="2dp"
                                android:gravity="center"
                                android:text="购物车"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/tv_unread_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:padding="1dp"
                                android:textColor="#ffffff"
                                android:textSize="10dp" />
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/tv_add"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#f86c1c"
                            android:gravity="center"
                            android:text="加入购物车"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tv_buynow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#ffa200"
                            android:gravity="center"
                            android:text="立即购买"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/tv_bmprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="￥450"
                        android:textColor="#ff4f4f"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_bmcontact"
                        android:layout_width="188.5dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="#ffa200"
                        android:gravity="center"
                        android:text="联系工厂"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tb_bmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="58dp"
                        android:layout_marginRight="19dp"
                        android:layout_toLeftOf="@+id/tv_bmcontact"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="10dp" />
                </RelativeLayout>
            </FrameLayout>


        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#00000000">

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_title"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">


                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:tabSelectedTextColor="#ffa200" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000">

                        <View
                            android:id="@+id/tab1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:foreground="?android:attr/selectableItemBackground" />

                        <View
                            android:id="@+id/tab2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:foreground="?android:attr/selectableItemBackground" />

                        <View
                            android:id="@+id/tab3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:foreground="?android:attr/selectableItemBackground" />

                        <View
                            android:id="@+id/tab4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:foreground="?android:attr/selectableItemBackground" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:src="@mipmap/main_back_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#00000000">

                <TextView
                    android:id="@+id/tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="···"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </FrameLayout>


    </FrameLayout>

</FrameLayout>
