<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:orientation="horizontal"
    android:showDividers="middle">

    <RelativeLayout
        android:id="@+id/rl_less"
        android:background="@drawable/bg_button_left"
        android:layout_width="22.5dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_textcontent"
        android:orientation="horizontal"
        android:background="@drawable/bg_button_center"
        android:minWidth="45dp"
        android:layout_width="45dp"
        android:layout_height="match_parent">
        <EditText
            android:gravity="center"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/tv_unit"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="13dp"
            android:cursorVisible="true"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:text="1"
            android:id="@+id/et_ab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_unit"
            android:textColor="#999999"
            android:textSize="13dp"
            android:text="å¤©"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_plus"
        android:background="@drawable/bg_button_right"
        android:layout_width="22.5dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

